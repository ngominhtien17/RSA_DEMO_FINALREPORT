      <div class="wrapper"></div>
      <section class="login-content">
         <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
               <div class="col-lg-8">
                  <div class="card auth-card">
                     <div class="card-body p-0">
                        <div class="d-flex align-items-center auth-content">
                           <div class="col-lg-7 align-self-center">
                              <div class="p-3">
                                 <h2 class="mb-2">Đăng ký</h2>
                                 <p>Tạo tài khoản của bạn.</p>
                                 <form id="registerForm" action="/users/register" method="POST">
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input class="floating-input form-control" type="text" id="name" name="name" placeholder=" " required>
                                             <label>Tên người dùng</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input class="floating-input form-control" type="email" id="email" name="email" placeholder=" " required>
                                             <label>Email</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input class="floating-input form-control" type="password" id="password" name="password" placeholder=" " required>
                                             <label>Mật khẩu</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="floating-label form-group">
                                             <input class="floating-input form-control" type="password" id="confirmPassword" name="confirmPassword" placeholder=" " required>
                                             <label>Nhập lại mật khẩu</label>
                                          </div>
                                       </div>
                                       <div class="col-lg-12">
                                          <div class="custom-control custom-checkbox mb-3">
                                             <input type="checkbox" class="custom-control-input" id="customCheck1" required>
                                             <label class="custom-control-label" for="customCheck1">Đồng ý với điều khoản sử dụng</label>
                                          </div>
                                       </div>
                                    </div>
                                    <button type="submit" id="registerButton" class="btn btn-primary">Đăng ký</button>
                                    <p class="mt-3">
                                       Đã có tài khoản? <a href="/users/login" class="text-primary">Đăng nhập</a>
                                    </p>
                                 </form>
                              </div>
                           </div>
                           <div class="col-lg-5 content-right">
                              <img src="../assets/images/login/01.png" class="img-fluid image-right" alt="">
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>

      <script>
      document.getElementById('registerForm').addEventListener('submit', function(event) {
          var password = document.getElementById('password').value;
          var confirmPassword = document.getElementById('confirmPassword').value;
          
          if (password !== confirmPassword) {
              event.preventDefault(); // Ngăn chặn form gửi đi
              alert('Mật khẩu và Nhập lại mật khẩu không khớp. Vui lòng kiểm tra lại.');
          }
      });
      </script>
      </div>