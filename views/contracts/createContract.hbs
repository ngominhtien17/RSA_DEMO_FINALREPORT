


    <div class="wrapper">
        <div class="content-page">
            <div class="container mt-5">
                <h2 class="mb-4">Tạo Hợp đồng</h2>
                <form id="contractForm" action="/contracts/create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="contractTitle" class="form-label">Tiêu đề hợp đồng</label>
                        <input type="text" class="form-control" name="title" id="contractTitle" placeholder="Nhập tiêu đề hợp đồng" required>
                    </div>
                    <div class="mb-3">
                        <label for="contractFile" class="form-label">Nội dung hợp đồng (PDF)</label>
                        <input type="file" class="form-control" name="contractFile" id="contractFile" accept=".pdf" required>
                        <div class="form-text">Vui lòng tải lên file PDF cho nội dung hợp đồng.</div>
                    </div>
                    <div class="mb-3">
                        <label for="signerEmails" class="form-label">Danh sách email người ký</label>
                        <input type="text" class="form-control" name="signerEmails" id="signerEmails" placeholder="Nhập email người ký, cách nhau bằng dấu phẩy" required>
                        <div class="form-text">Bạn có thể nhập nhiều email, cách nhau bằng dấu phẩy.</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Tạo Hợp đồng</button>
                    <button type="button" class="btn btn-secondary" onclick="goBack()">Quay lại</button>
                </form>
            <div id="resultMessage" class="mt-4" style="display: none;">
            <div class="alert alert-success" role="alert">
                    Hợp đồng đã được tạo thành công và gửi đến người ký.
                </div>
            </div>
        </div>
        
        </div>
        <!-- Page end  -->
    </div>



    <script>
        function goBack() {
            window.history.back();
        }   
        // Giả lập xử lý form
        document.getElementById('contractForm').addEventListener('submit', function(event) {
            const fileInput = document.getElementById('contractFile');
            if (fileInput.files.length === 0) {
                event.preventDefault(); // Chỉ ngăn chặn nếu không có file
                alert('Vui lòng tải lên file PDF.');
                return;
            }
            // Không ngăn chặn hành động mặc định nếu tất cả điều kiện đều thỏa mãn
        });
    </script>