<div class="container mt-5">
    <h2 class="mb-4">{{contract.title}}</h2>
    <div class="mb-4">
        <embed src="/{{contract.contractFilePath}}" type="application/pdf" width="100%" height="600px" />
    </div>
    <form action="/contracts/{{contract._id}}/sign" method="post" class="mt-3">
        <button type="submit" name="action" value="sign" class="btn btn-success">Ký</button>
        <button type="submit" name="action" value="decline" class="btn btn-danger">Từ chối</button>
    </form>
</div>