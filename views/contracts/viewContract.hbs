<div class="container mt-5">
    <h2 class="mb-4">{{contract.title}}</h2>
    <div class="mb-4">
        <embed src="/{{contract.contractFilePath}}" type="application/pdf" width="100%" height="600px" />
    </div>
    {{#ifEquals contract.status 'pending'}}
    <form action="/signatures/sign/{{contract._id}}" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="form-group">
            <label for="privateKey">Tải lên chữ ký riêng tư của bạn:</label>
            <input type="file" id="privateKey" name="privateKey" class="form-control" required>
        </div>
        <button type="submit" name="action" value="sign" class="btn btn-success">Ký</button>
        <button type="submit" name="action" value="decline" class="btn btn-danger">Từ chối</button>
    </form>
    {{/ifEquals}}
</div>