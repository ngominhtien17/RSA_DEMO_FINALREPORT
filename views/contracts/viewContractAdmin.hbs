
<div class="wrapper">
<div class="content-page">
<div class="container mt-5">
    <h2 class="mb-4">Danh Sách Hợp Đồng</h2>
    <div class="table-responsive">
        <table id="datatable" class="table data-tables table-striped">
            <thead>
                <tr>
                <th>Tiêu Đề</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            {{#each contracts}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.status}}</td>
                <td>
                    <a href="/contracts/detail/{{this.id}}" class="btn btn-info btn-sm">Xem Chi Tiết</a>
                    <a href="/contracts/update/{{this.id}}" class="btn btn-warning btn-sm">Cập nhật</a>
                    <form action="/contracts/delete/{{this.id}}" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc chắn muốn xóa hợp đồng này không?');">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="3" class="text-center">Không có hợp đồng nào</td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
</div>
</div>
</div>