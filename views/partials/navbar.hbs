<script>
$(document).ready(function() {
  // Giả sử bạn có một biến `userRole` để xác định vai trò của người dùng
  var userRole = '{{user.role}}'; // Thay thế bằng cách lấy vai trò thực tế từ server

  if (userRole === 'admin') {
    // Ẩn mục "Hợp đồng chờ ký" nếu người dùng là admin
    $('a[href="/contracts/user"]').closest('li').hide();
  } else if (userRole === 'user') {
    // Ẩn tất cả các mục khác ngoại trừ "Hợp đồng chờ ký" và "Trang chủ" nếu người dùng là user
    $('.custom-menu li').not($('a[href="/contracts/user"]').closest('li')).not($('a[href="/"]').closest('li')).hide();
  }

  // Lấy đường dẫn hiện tại
  var currentPath = window.location.pathname;
  console.log(currentPath);

  // Lặp qua tất cả các liên kết trong menu
  $('.custom-menu a').each(function() {
    var $this = $(this);
    // Kiểm tra nếu href của liên kết khớp với đường dẫn hiện tại
    if ($this.attr('href') === currentPath) {
      // Xóa lớp 'active' khỏi tất cả các mục
      $('.custom-menu li').removeClass('active');
      // Thêm lớp 'active' vào mục chứa liên kết khớp
      $this.parent('li').addClass('active');
    }
  });
});
</script>